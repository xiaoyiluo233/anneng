<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yidu.lr.dao.AddressDao">

    <resultMap id="BaseResultMap" type="com.yidu.entity.Address">
        <!--@Table address-->
        <result property="aid" column="aid" jdbcType="INTEGER"/>
        <result property="districtid" column="districtId" jdbcType="INTEGER"/>
        <result property="avalue" column="avalue" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
        <result property="uid" column="uid" jdbcType="INTEGER"/>
        <result property="atype" column="atype" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          aid, districtId, avalue, phone, uid, atype
        from ane.address
        where aid = #{aid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          aid, districtId, avalue, phone, uid, atype
        from ane.address
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          aid, districtId, avalue, phone, uid, atype
        from ane.address
        <where>
            <if test="aid != null">
                and aid = #{aid}
            </if>
            <if test="districtid != null">
                and districtId = #{districtid}
            </if>
            <if test="avalue != null and avalue != ''">
                and avalue = #{avalue}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="uid != null">
                and uid = #{uid}
            </if>
            <if test="atype != null">
                and atype = #{atype}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="aid" useGeneratedKeys="true">
        insert into ane.address(districtId, avalue, phone, uid, atype)
        values (#{districtid}, #{avalue}, #{phone}, #{uid}, #{atype})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ane.address
        <set>
            <if test="districtid != null">
                districtId = #{districtid},
            </if>
            <if test="avalue != null and avalue != ''">
                avalue = #{avalue},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
            <if test="uid != null">
                uid = #{uid},
            </if>
            <if test="atype != null">
                atype = #{atype},
            </if>
        </set>
        where aid = #{aid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ane.address where aid = #{aid}
    </delete>

</mapper>