<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yidu.lixiang.dao.DistrictDao">

    <resultMap id="BaseResultMap" type="com.yidu.entity.District">
        <!--@Table district-->
        <result property="districtid" column="districtId" jdbcType="INTEGER"/>
        <result property="provinceid" column="provinceId" jdbcType="INTEGER"/>
        <result property="cityid" column="cityId" jdbcType="INTEGER"/>
        <result property="districtname" column="districtName" jdbcType="VARCHAR"/>
    </resultMap>
    <!-- 市级与县级的一对一关系映射 -->
    <resultMap id="getCityMapper" type="com.yidu.entity.District">
        <result property="districtid" column="districtId" jdbcType="INTEGER"/>
        <result property="provinceid" column="provinceId" jdbcType="INTEGER"/>
        <result property="cityid" column="cityId" jdbcType="INTEGER"/>
        <result property="districtname" column="districtName" jdbcType="VARCHAR"/>
        <association property="city" javaType="com.yidu.entity.City">
            <result property="cityid" column="cityId" jdbcType="INTEGER"/>
            <result property="provinceid" column="provinceId" jdbcType="INTEGER"/>
            <result property="cityname" column="cityName" jdbcType="VARCHAR"/>
            <association property="province" javaType="com.yidu.entity.Province">
                <result property="provinceid" column="provinceid" jdbcType="INTEGER"/>
                <result property="provincename" column="provincename" jdbcType="VARCHAR"/>
            </association>
        </association>
    </resultMap>

    <select id="getCity" resultMap="getCityMapper">
        SELECT * FROM district d1,city c1,province p1
        <where>
            d1.`cityId`=c1.`cityId` AND c1.`provinceId`=p1.`provinceId`
            <if test="districtid != null">
                and districtId = #{districtid}
            </if>
            <if test="provinceid != null">
                and provinceId = #{provinceid}
            </if>
            <if test="cityid != null">
                and cityId = #{cityid}
            </if>
            <if test="districtname != null and districtname != ''">
                and districtName = #{districtname}
            </if>
        </where>
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          districtId, provinceId, cityId, districtName
        from ane.district
        where districtId = #{districtid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          districtId, provinceId, cityId, districtName
        from ane.district
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          districtId, provinceId, cityId, districtName
        from ane.district
        <where>
            <if test="districtid != null">
                and districtId = #{districtid}
            </if>
            <if test="provinceid != null">
                and provinceId = #{provinceid}
            </if>
            <if test="cityid != null">
                and cityId = #{cityid}
            </if>
            <if test="districtname != null and districtname != ''">
                and districtName = #{districtname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="districtid" useGeneratedKeys="true">
        insert into ane.district(provinceId, cityId, districtName)
        values (#{provinceid}, #{cityid}, #{districtname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ane.district
        <set>
            <if test="provinceid != null">
                provinceId = #{provinceid},
            </if>
            <if test="cityid != null">
                cityId = #{cityid},
            </if>
            <if test="districtname != null and districtname != ''">
                districtName = #{districtname},
            </if>
        </set>
        where districtId = #{districtid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ane.district where districtId = #{districtid}
    </delete>

</mapper>