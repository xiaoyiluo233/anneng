<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yidu.ly.dao.WarehouseDao">

    <resultMap id="BaseResultMap" type="com.yidu.entity.Warehouse">
        <!--@Table warehouse-->
        <result property="wid" column="wid" jdbcType="INTEGER"/>
        <result property="wname" column="wname" jdbcType="VARCHAR"/>
    </resultMap>

    <!--统计行数-->
    <select id="count" resultType="int">
        select
            count(0)
        from ane.warehouse
        <where>
            <if test="name!=null and name!=''">
                wname like '%${name}%'
            </if>
        </where>
    </select>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          wid, wname
        from ane.warehouse
        where wid = #{wid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          wid, wname
        from ane.warehouse
        <where>
            <if test="name!=null and name!=''">
                wname like '%${name}%'
            </if>
        </where>
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          wid, wname, oid, times, state
        from ane.warehouse
        <where>
            <if test="wid != null">
                and wid = #{wid}
            </if>
            <if test="wname != null and wname != ''">
                and wname = #{wname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="wid" useGeneratedKeys="true">
        insert into ane.warehouse(wname)
        values (#{wname})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update ane.warehouse
        <set>
            <if test="wname != null and wname != ''">
                wname = #{wname},
            </if>
        </set>
        where wid = #{wid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from ane.warehouse where wid = #{wid}
    </delete>

</mapper>